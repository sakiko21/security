<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>投稿画面</title>
  <link rel="stylesheet" href="css/style.css">

</head>

<body>
  <header>
    <div class="header">
      <div class="header-left">
        <a href="/">トップページ</a>
      </div>
      <div class="header-right">
        <a onClick="logout()" style="cursor:pointer">ログアウト</a>
      </div>
    </div>
  </header>
  <main>
    <div class="container">
      <h1 style="text-align: center;">学習メモ一覧</h1>
      <form action="/post" method="get">
        <h3>絞り込み</h3>
        <label for="search_category">カテゴリ</label>
        <select id="search_category" name="category">
          <option value="">選択してください</option>
          <!-- HTML/CSS, JavaScript, 案件獲得, 転職活動 -->
          <option value="HTML/CSS">HTML/CSS</option>
          <option value="JavaScript">JavaScript</option>
          <option value="案件獲得">案件獲得</option>
          <option value="転職活動">転職活動</option>
        </select>
        <button type="submit">絞り込む</button>
      </form>
      <form method="post" action="/api/post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <label for="category">カテゴリ</label>
        <select id="category" name="category" required>
          <option value="">選択してください</option>
          <!-- HTML/CSS, JavaScript, 案件獲得, 転職活動 -->
          <option value="HTML/CSS">HTML/CSS</option>
          <option value="JavaScript">JavaScript</option>
          <option value="案件獲得">案件獲得</option>
          <option value="転職活動">転職活動</option>
        </select>

        <label for="content">投稿内容</label>
        <textarea id="content" name="content" required></textarea>


        
        <button type="submit">投稿</button>
      </form>
      <!-- 投稿した内容の一覧を表示 -->
      <div id="posts">
        <% for (let post of posts) { %>
          <div class="post">
            <div class="post-left">
              <h3 class="post-user">
                <%- post.user_name -%>
              </h3>
              <small class="post-email">
                <%- post.user_email -%>
              </small><br />
              <small class="post-phone">
                <%- post.user_phone -%>
              </small><br />
              <small class="post-date">
                <%- post.createdat -%>
              </small>
            </div>
            <div class="post-right">
              <br />
              <strong class="post-category">カテゴリ: <%- post.category -%></strong><br /><br />
              <strong>投稿内容</strong>
              <div class="post-content">
                <%- post.content -%>
              </div>
            </div>
          </div>
          <% } %>
      </div>
    </div>
  </main>
